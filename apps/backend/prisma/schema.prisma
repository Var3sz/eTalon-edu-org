generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int      @id @default(autoincrement())
  description String
  courses     Course[]
}

model Location {
  id          Int      @id @default(autoincrement())
  description String
  courses     Course[]
}

model Course {
  id           Int      @id @default(autoincrement())
  courseId     String
  description  String
  price        Int?
  active       Boolean  @default(true)
  endTime      String
  groupId      Int
  headcount    Int?
  locationId   Int
  maxHeadcount Int
  startDate    DateTime
  startTime    String
  locked       Boolean
  group        Group    @relation(fields: [groupId], references: [id])
  location     Location @relation(fields: [locationId], references: [id])
}

view coursesummaryview {
  id               Int       @unique
  courseId         String?
  groupDescription String?
  occupancy        Int?
  description      String?
  headcount        Int?
  maxHeadcount     Int?
  price            Int?
  startDate        DateTime?
  startTime        String?
  endTime          String?
  active           Boolean?
  locked           Boolean?
}
