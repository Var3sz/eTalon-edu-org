generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int      @id @default(autoincrement())
  description String
  courses     Course[]
}

model Location {
  id          Int      @id @default(autoincrement())
  description String
  courses     Course[]
}

model BillingType {
  id          Int       @id @default(autoincrement())
  description String
  students    Student[]
}

model CourseDates {
  id       Int      @id @default(autoincrement())
  date     DateTime
  courseId Int
  course   Course   @relation(fields: [courseId], references: [id])
}

model Course {
  id           Int           @id @default(autoincrement())
  courseId     String
  description  String
  price        Int?
  active       Boolean       @default(true)
  endTime      String
  groupId      Int
  headcount    Int?
  locationId   Int
  maxHeadcount Int
  startDate    DateTime
  startTime    String
  locked       Boolean
  group        Group         @relation(fields: [groupId], references: [id])
  location     Location      @relation(fields: [locationId], references: [id])
  courseDate   CourseDates[]
  students     Student[]
}

model Student {
  id            Int         @id @default(autoincrement())
  email         String
  lastname      String
  firstname     String
  billCompany   String?
  city          String
  zip           Int
  address       String
  vatNumber     String?
  children      String
  childrenMail  String?
  mobile        String
  billingTypeId Int
  courseId      Int
  billingType   BillingType @relation(fields: [billingTypeId], references: [id])
  course        Course      @relation(fields: [courseId], references: [id])
}

view CourseSummaryOverview {
  id               Int       @unique
  courseId         String?
  groupDescription String?
  occupancy        Int?
  description      String?
  headcount        Int?
  maxHeadcount     Int?
  price            Int?
  startDate        DateTime?
  startTime        String?
  endTime          String?
  active           Boolean?
  locked           Boolean?
}

view StudentDetailsView {
  id            Int     @unique
  email         String?
  lastname      String?
  firstname     String?
  billCompany   String?
  city          String?
  zip           Int?
  address       String?
  vatNumber     String?
  children      String?
  childrenMail  String?
  mobile        String?
  billingTypeId Int?
  courseId      Int?
  courseCode    String?
}
